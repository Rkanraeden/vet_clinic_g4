<h1>Ficha Cliente</h1>
<div id="<%= dom_id client %>">
  <p>
    <strong>id:</strong>
    <%= client.id%>
  </p>
  
  <p>
    <strong>Name:</strong>
    <%= client.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= client.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= client.phone %>
  </p>

</div>
<div>
  <table class = "table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Altura Máxima</th>
        <th>Peso Máximo</th>
      </tr>
    </thead>
    <tbody>
      <% @pets.each do |pet|%>
        <tr>
          <td><%=pet.name></td>
          <td><%=pet.max_weight></td>
          <td><%=pet.max_height></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>